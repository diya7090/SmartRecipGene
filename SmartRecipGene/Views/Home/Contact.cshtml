@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}


@section Scripts {
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                e.preventDefault();

                var formData = {
                    Name: $('#name').val(),
                    Email: $('#email').val(),
                    Subject: $('#subject').val(),
                    Message: $('#message').val()
                };

                $('.loading-spinner').show();

                $.ajax({
                    url: '@Url.Action("SubmitContact", "Home")',
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        $('.loading-spinner').hide();

                        if (response.success) {
                            $('.toast-notification')
                                .addClass('toast-success')
                                .find('.toast-message')
                                .text('Thank you for your message! We will get back to you soon.');

                            $('form')[0].reset();

                            // Redirect to home page after 2 seconds
                            setTimeout(function () {
                                window.location.href = '@Url.Action("Index", "Home")';
                            }, 2000);
                        } else {
                            $('.toast-notification')
                                .addClass('toast-error')
                                .find('.toast-message')
                                .text('Something went wrong. Please try again.');
                        }

                        $('.toast-notification').css('display', 'flex');
                        setTimeout(function () {
                            $('.toast-notification').fadeOut();
                        }, 3000);
                    },
                    error: function () {
                        $('.loading-spinner').hide();
                        $('.toast-notification')
                            .addClass('toast-error')
                            .find('.toast-message')
                            .text('An error occurred. Please try again.');

                        $('.toast-notification').css('display', 'flex');
                        setTimeout(function () {
                            $('.toast-notification').fadeOut();
                        }, 3000);
                    }
                });
            });
        });
    </script>
}
