@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="get" asp-action="SearchRecipes">
        <input type="text" name="query" class="form-control" placeholder="Search recipes..." />

        <label>Cuisine:</label>
        <select name="cuisine" class="form-control">
            <option value="">Any</option>
            <option value="Indian">Indian</option>
            <option value="Italian">Italian</option>
            <option value="Mexican">Mexican</option>
        </select>

        <label>Meal Type:</label>
        <select name="mealType" class="form-control">
            <option value="">Any</option>
            <option value="breakfast">Breakfast</option>
            <option value="lunch">Lunch</option>
            <option value="dessert">Dessert</option>  <!-- 🍰 Dessert Option -->

            <option value="dinner">Dinner</option>
        </select>

        <label>Dietary Restrictions:</label>
        <select name="diet" class="form-control">
            <option value="">Any</option>
            <option value="vegetarian">Vegetarian</option>
            <option value="vegan">Vegan</option>
            <option value="gluten free">Gluten Free</option>
            <option value="egg free">Egg Free</option>
        </select>

        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>

    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
</div>
