@model SmartRecipGene.Models.Address

<div class="container mt-4">
    <h2>Delivery Details</h2>
    @* Show validation summary *@
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Address" asp-controller="Home" method="post">
        <div class="mb-3">
            <label for="StreetAddress" class="form-label">Street Address</label>
            <input asp-for="StreetAddress" class="form-control" id="StreetAddress" required />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" id="City" required />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="State" class="form-label">State</label>
            <input asp-for="State" class="form-control" id="State" required />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="PostalCode" class="form-label">Postal Code</label>
            <input asp-for="PostalCode" class="form-control" id="PostalCode" required />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Notes" class="form-label">Map/Notes (optional)</label>
            <input asp-for="Notes" class="form-control" id="Notes" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Continue to Order Summary</button>
    </form>
</div>