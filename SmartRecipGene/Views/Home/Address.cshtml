
@model SmartRecipGene.Models.Address

<div class="container address-container mt-4">
    <h2>Delivery Details</h2>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Address" asp-controller="Home" method="post" novalidate>
        <div class="mb-3">
            <label for="StreetAddress" class="form-label">Street Address</label>
            <input asp-for="StreetAddress" class="form-control" id="StreetAddress"
                   required minlength="5" maxlength="200"
                   pattern="^[a-zA-Z0-9\s,.'\-/#]+$"
                   title="Street address must be 5-200 characters and can include letters, numbers, spaces, and ,.'-/#" />
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" id="City"
                   required minlength="2" maxlength="100"
                   pattern="^[A-Za-z\s]+$"
                   title="City must be 2-100 letters and spaces only." />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="State" class="form-label">State</label>
            <input asp-for="State" class="form-control" id="State"
                   required minlength="2" maxlength="100"
                   pattern="^[A-Za-z\s]+$"
                   title="State must be 2-100 letters and spaces only." />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="PostalCode" class="form-label">Postal Code</label>
            <input asp-for="PostalCode" class="form-control" id="PostalCode"
                   required minlength="4" maxlength="20"
                   pattern="^\d{4,20}$"
                   title="Postal code must be 4-20 digits" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber"
                   required minlength="10" maxlength="10"
                   pattern="^\d{10}$"
                   title="Phone number must be exactly 10 digits." />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Notes" class="form-label">Map/Notes (optional)</label>
            <input asp-for="Notes" class="form-control" id="Notes"
                   maxlength="500"
                   pattern="^[a-zA-Z0-9\s,.'\-/#]*$"
                   title="Notes can include up to 500 characters: letters, numbers, spaces, and ,.'-/#" />
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Continue to Order Summary</button>
    </form>
  
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
        document.getElementById('City').addEventListener('keypress', function (e) {
            if (/[0-9]/.test(e.key)) e.preventDefault();
        });
        document.getElementById('State').addEventListener('keypress', function (e) {
            if (/[0-9]/.test(e.key)) e.preventDefault();
        });
        document.getElementById('PostalCode').addEventListener('keypress', function (e) {
            if (!/[0-9]/.test(e.key)) e.preventDefault();
        });
        document.getElementById('PhoneNumber').addEventListener('keypress', function (e) {
            if (!/[0-9]/.test(e.key)) e.preventDefault();
        });
        </script>
    }
<style>
    .address-container {
        margin: 2rem auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        padding: 2rem 2.5rem;
    }

    h2 {
        text-align: center;
        margin-bottom: 2rem;
        color: #2d3e50;
    }

    .form-label {
        font-weight: 500;
        color: #2d3e50;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .text-danger {
        font-size: 0.95em;
        margin-top: 0.25rem;
        display: block;
    }

    .btn-primary {
        color: white;
        border: none;
        padding: 1rem 2.5rem;
        border-radius: 50px;
         background: #e67e22;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s;
        display: block;
        margin: 2rem auto 0;
    }

        .btn-primary:hover {
            background: #e67e22;
        }

    .mb-3 {
        margin-bottom: 1.25rem !important;
    }
</style>