     @model JArray

@{
    ViewData["Title"] = "Recipe Suggestions";
}

<div class="recipe-container">
    <div class="recipe-hero">
        <div class="hero-content">
            <h1>@ViewData["Title"]</h1>
            <p>Discover delicious recipes for your next meal</p>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="recipe-grid">
            @foreach (var recipe in Model)
            {
                <div class="recipe-card">
                    <div class="recipe-image">
                        <img src="@recipe["image"]" alt="@recipe["title"]" />
                        <div class="recipe-overlay">
                            <a href="@Url.Action("RecipeDetails", "Home", new { id = recipe["id"] })" class="view-recipe-btn">
                                <i class="fas fa-eye"></i> View Recipe
                            </a>
                        </div>
                    </div>
                    <div class="recipe-content">
                        <h3>@recipe["title"]</h3>
                        <div class="recipe-meta">
                            <span>
                                <i class="fas fa-check"></i> @recipe["usedIngredientCount"] used
                            </span>
                            <span>
                                <i class="fas fa-times"></i> @recipe["missedIngredientCount"] missing
                            </span>
                        </div>
                        <div class="recipe-details">
                            <span>
                                <i class="fas fa-clock"></i>
                                @recipe["readyInMinutes"] mins
                            </span>
                            <span>
                                <i class="fas fa-user-friends"></i>
                                @recipe["servings"] servings
                            </span>
                        </div>
                    </div>

                </div>
            }
        </div>
    }
    else
    {
        <div class="no-results">
            <i class="fas fa-search"></i>
            <h2>No Recipes Found</h2>
            <p>Try different ingredients or check our popular recipes</p>
            <a href="@Url.Action("Ingredients", "Home")" class="back-button">
                <i class="fas fa-arrow-left"></i> Try Again
            </a>
        </div>
    }
</div>

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
}

<style>
    .recipe-meta {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.8rem;
        color: #666;
        font-size: 0.9rem;
        margin-top: 1rem;
    }

        .recipe-meta span {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .recipe-meta i {
            color: var(--primary-color);
            font-size: 1rem;
        }

    .recipe-details {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.8rem;
        margin-top: 0.5rem;
        padding-top: 0.5rem;
        border-top: 1px solid #eee;
    }

        .recipe-details span {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #666;
            font-size: 0.9rem;
        }

        .recipe-details i {
            color: var(--primary-color);
            font-size: 1rem;
        }
    .recipe-container {
        max-width: 1200px;
        margin: -50px auto 2rem;
        padding: 2rem;
