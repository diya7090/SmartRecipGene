    cursor: pointer;
    padding: 10px;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.favorite-icon i {
    font-size: 1.8rem;
    color: #ff4b4b;
    transition: all 0.3s ease;
}

.favorite-icon i.far {
    color: #dedede;
}

.favorite-icon i.fas {
    color: #ff4b4b;
    animation: heartBeat 0.3s ease-in-out;
}

@@keyframes heartBeat {
    0% { transform: scale(1); }
    50% { transform: scale(1.3); }
    100% { transform: scale(1); }
}

.favorite-icon:hover i.far {
    color: #ff4b4b;
    transform: scale(1.1);
}
.favorite-toast {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%) translateY(100px);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 12px 24px;
    border-radius: 50px;
    font-size: 0.9rem;
    z-index: 1000;
    opacity: 0;
    transition: all 0.3s ease;
}

.favorite-toast.show {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
}
