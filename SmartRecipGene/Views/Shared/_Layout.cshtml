<style>
    body {
        font-family: 'Source Sans Pro', sans-serif;
        color: #333;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Navbar Styles */
    .navbar {
        background-color: white;
        padding: 1rem 0;
    }

    .navbar-brand {
        font-family: 'Merriweather', serif;
        font-size: 1.5rem;
        color: #ff6b6b !important;
        font-weight: 700;
    }

    .navbar-brand i {
        margin-right: 0.5rem;
    }

    .nav-link {
        color: #333 !important;
        font-weight: 600;
        padding: 0.5rem 1rem;
        transition: color 0.3s;
    }

    .nav-link:hover {
        color: #ff6b6b !important;
    }

    .admin-link {
        color: #dc3545 !important;
    }

    .admin-link:hover {
        color: #c82333 !important;
    }

    .nav-link.btn-link {
        border: none;
        background: none;
        font-weight: 600;
    }

    /* Main Content */
    main {
        flex: 1;
    }

    /* Footer Styles */
    .footer {
        background: #2c3e50;
        color: white;
        padding: 4rem 0 2rem;
        margin-top: 4rem;
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer-section h5 {
        font-family: 'Merriweather', serif;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        color: #ff6b6b;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section ul li {
        margin-bottom: 0.8rem;
    }

    .footer-section a {
        color: white;
        text-decoration: none;
        transition: color 0.3s;
    }

    .footer-section a:hover {
        color: #ff6b6b;
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-links a {
        font-size: 1.5rem;
    }

    .footer-bottom {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid rgba(255,255,255,0.1);
    }

    @@media (max-width: 768px) {
        .navbar {
            padding: 0.5rem 0;
        }

        .footer {
            padding: 2rem 0 1rem;
        }

        .footer-content {
            gap: 1.5rem;
        }
    }
</style>