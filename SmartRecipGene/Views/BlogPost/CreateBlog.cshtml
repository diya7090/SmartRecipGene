@model SmartRecipGene.Models.BlogPost

@{
    ViewData["Title"] = "Create a New Blog Post";
}

<h2 class="text-center text-primary">📝 Create a New Blog Post</h2>

<div class="container mt-4">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="Title" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Content</label>
            <textarea asp-for="Content" class="form-control" rows="5" required></textarea>
        </div>

        <div class="form-group">
            <label>Author</label>
            <input asp-for="Author" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Category</label>
            <input asp-for="Category" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Image URL</label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>

        <div class="form-group">
            <label>Tags (comma-separated)</label>
            <input asp-for="Tags" class="form-control" />
        </div>

        <div class="form-check">
            <input type="checkbox" asp-for="IsPublished" class="form-check-input" />
            <label class="form-check-label">Publish Now</label>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">📌 Publish Blog</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
