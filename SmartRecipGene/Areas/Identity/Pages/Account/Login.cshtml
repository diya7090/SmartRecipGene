@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 login-form p-3 mt-5 mb-5">
                <section>
                    <h4 class="text-center mb-4 mt-1">@ViewData["Title"]</h4>

                    <form id="account" method="post" class="mt-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="checkbox mb-4">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                            </p>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                        </div>
                        <div class="text-center mt-4">
                            <p>Don`t have an account? 
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                            </p>
                            <p class="d-none">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .login {
        background-image: url(/images/bg.png);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .login-form {
        -webkit-box-shadow: 0 0 5px 3px rgba(0,0,0,0.2);
        box-shadow: 0 0 5px 3px rgba(0,0,0,0.2);
        border-radius: 12px ;
        background: #fff;
    }

    #login-submit {
        background: #734060;
        border-color: #2c3e50;
    }

</style>
