@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="container message-box animate-fadein">
    <h1><i class="bi bi-check-circle-fill text-success me-2"></i> @ViewData["Title"]</h1>
    <p>📬 Please check your email to reset your password.</p>
</div>

<style>
    .message-box {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2.5rem;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
        text-align: center;
        animation: fadeIn 1s ease;
    }

    .message-box h1 {
        font-size: 1.9rem;
        color: #e67e22;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .message-box p {
        font-size: 1.15rem;
        color: #333;
        margin-top: 1rem;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }
</style>
