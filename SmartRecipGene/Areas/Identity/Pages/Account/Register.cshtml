@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="register">
    <div class="container">
        <div class="row register-outline">
            <div class="col-md-6 register-img"></div>
            <div class="col-md-6 register-form p-3">
                <section>
                <h4 class="text-center mb-4 mt-1">@ViewData["Title"]</h4>
                <form id="registerForm" class="mt-4" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Name" class="form-control" 
                               autocomplete="name" 
                               aria-required="true" 
                               placeholder="name"
                               pattern="[A-Za-z\s]+"
                               oninput="this.value = this.value.replace(/[^A-Za-z\s]/g, '')"
                               title="Please enter only letters and spaces" />
                        <label asp-for="Input.Name">Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
       
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
           @*  <div class="col-md-4"></div> *@

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('Input_Name').addEventListener('keypress', function(e) {
            var char = String.fromCharCode(e.keyCode || e.which);
            if (!/[A-Za-z\s]/.test(char)) {
                e.preventDefault();
            }
        });
    </script>
}

<style>
    .register-outline {
        -webkit-box-shadow: 0 0 5px 3px rgba(0,0,0,0.2) !important;
    }

    .register-img {
        background-image: url(/images/bg.png);
        background-position: center;
        background-repeat: no-repeat;
        /*         background-size: cover;
     */
    }

    .register-form {
        /*         box-shadow: 0 0 5px 3px rgba(0,0,0,0.2);
     */ /* border-radius: 12px ; */
        background: #fff;
    }

    #registerSubmit {
        background: #734060;
        border-color: #2c3e50;
    }

</style>

